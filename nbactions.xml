<?xml version="1.0" encoding="UTF-8"?>
<actions>
    <action>
        <actionName>run</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>spring-boot:run</goal>
        </goals>
        <properties>
            <run.mainClass>com.application.rest.FormServiceApplication</run.mainClass>
        </properties>
    </action>
    <action>
        <actionName>debug</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>spring-boot:run</goal>
        </goals>
        <properties>
            <run.jvmArguments>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address}</run.jvmArguments>
            <run.mainClass>com.application.rest.FormServiceApplication</run.mainClass>
            <jpda.listen>true</jpda.listen>
        </properties>
    </action>
    <action>
        <actionName>profile</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
        </goals>
        <properties>
            <exec.args>-classpath %classpath com.application.rest.FormServiceApplication</exec.args>
            <exec.executable>java</exec.executable>
        </properties>
    </action>
    <action>
            <actionName>CUSTOM-build without tests</actionName>
            <displayName>build without tests</displayName>
            <goals>
                <goal>clean</goal>
                <goal>install</goal>
            </goals>
            <properties>
                <skipTests>true</skipTests>
            </properties>
        </action>
    <action>
            <actionName>CUSTOM-build and run without tests</actionName>
            <displayName>build and run without tests</displayName>
            <goals>
                <goal>clean</goal>
                <goal>install</goal>
                <goal>spring-boot:run</goal>
            </goals>
            <properties>
                <skipTests>true</skipTests>
            </properties>
        </action>
    <action>
            <actionName>CUSTOM-javadoc</actionName>
            <displayName>javadoc</displayName>
            <goals>
                <goal>javadoc:javadoc</goal>
            </goals>
        </action>
</actions>
